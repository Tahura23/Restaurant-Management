@model IEnumerable<Restaurant_app.Models.Reservation>

<p>
    @Html.ActionLink("New Reservation", "Create", null, new { @class = "btn btn-primary" })
</p>
<div class="card-body py-3">
    <div class="table-responsive">
        <table class="table table-bordered table-striped" id="">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Guest.GuestNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Meal.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TimeSlot.Timing)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Requestdes)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CustomerName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Branch.BranchName)
                </th>
            
                <th>Action</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Guest.GuestNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Meal.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TimeSlot.Timing)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Requestdes)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Branch.BranchName)
                    </td>
           
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ReservationId },new { @class = "btn btn-primary" })
                     
                    </td>
                </tr>
            }

        </table>
